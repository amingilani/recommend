    <p>
        <%= @recommendation.name %>
        Tel: <%= @recommendation.phone_number %><br >

        <% if @recommendation.fax_number.present? %>
        Fax: <%= @recommendation.fax_number%><br >
        <% end %>

        Email: <%= @recommendation.email %><br >
        <%= @recommendation.address_line_1 %>
        <% if @recommendation.address_line_2.present? %>
